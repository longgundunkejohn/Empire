@using Empire.Shared.Models

<div class="deck" @onclick="OnDrawClick">
    <img src="@CardBackImage" alt="Deck" class="card-image" />
    <span class="deck-count">@DeckCount</span>
</div>

@code {
    [Parameter] public int DeckCount { get; set; }
    [Parameter] public string CardBackImage { get; set; } = "images/defaultCardback.png"; // Default fallback
    [Parameter] public EventCallback OnDraw { get; set; }

    private async Task OnDrawClick()
    {
        await OnDraw.InvokeAsync(); // Trigger the OnDraw action passed from the parent
    }
}
